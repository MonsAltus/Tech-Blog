<div class="text-center">
    <div class="row mb-4 project">
        <div class="col-md-5">
            <h2>{{title}}</h2>
        </div>
        <div class="col-md-7">
            <p class="post-content">
                {{content}}
            </p>
            <p>
                Author: {{user.name}} Posted on: {{format_date date_created}}
            </p>
        </div>
    </div>
    
    {{!-- View comments --}}
    <h4>Comments:</h4>
    {{#each comments as |comment| }}
    <div class="col-md-7">
        <p class="post-content">
            {{content}}
        </p>
        <p>
            Author: {{user.name}} Posted on: {{format_date date_created}}
        </p>
    {{/each}}

    {{!-- Add comment form if logged in--}}
    {{#if logged_in}}
    <form class="form add-comment-form">
        <div class="form-group">
            <label for="content">Add a comment:</label>
            <input class="form-input" type="test" id="add-comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-comment" type="submit">Add comment.</button>
        </div>
    </form>
    {{/if}}
</div>

<script src="/js/addComment.js"></script>