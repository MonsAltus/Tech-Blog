<!-- Loop over each object in Post array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
    </div>
    <div class="col-md-7">
        <p class="post-content">
            {{post.content}}
        </p>
        <p>
            Author: {{post.user.name}} Posted on: {{format_date post.date_created}}
        </p>
    </div>
</div>
{{/each}}
